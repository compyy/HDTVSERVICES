<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.HDTV" name="HDTV" version="1.8B" provider-name="Compyy">
    <requires>
        <import addon="xbmc.python" version="2.7.0"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="addon.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.service" library="HDservice.py"/>
    <extension point="xbmc.addon.metadata">
        <platform>all</platform>
        <summary lang="en"></summary>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en">https://www.facebook.com/wwHDTV/</summary>
        <description lang="en">We aim to provide affordable and excellent replacement to traditional local TV. We offer
            more channels and packaged entertainment with superior screen resolution and sound. You don’t need Netflix
            (Rs 1,200 monthly), you don’t need HBO ($15 monthly), you don’t need sports channels separately and you
            watch desi channels in good quality!
        </description>
        <disclaimer lang="en">The author does not host or distribute any of the content displayed by this addon. The
            author does not have any affiliation with the content provider.
        </disclaimer>
        <language>English</language>
        <source>https://github.com/compyy/HDTVSERVICES</source>
        <website>https://github.com/compyy/HDTVSERVICES</website>
        <platform>all</platform>
    </extension>
    <extension point="xbmc.addon.repository" name="WoldWide HD TV Services">
        <info compressed="false">https://raw.github.com/compyy/HDTVSERVICES/master/addons.xml</info>
        <checksum>https://raw.github.com/compyy/HDTVSERVICES/master/addons.xml.md5</checksum>
        <datadir zip="true">https://raw.github.com/compyy/HDTVSERVICES/master/zips</datadir>
    </extension>
</addon>